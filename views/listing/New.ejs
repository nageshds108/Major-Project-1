<% layout('layout/boiler') %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Enter Details Of Your New Listing</h2>
    <br>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" placeholder="Add Title" class="form-control" required>
        <div class="valid-feedback">Title Looks good !</div>
        </div>
        <div class="mb-2">
        <label for="description"class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required></textarea>
        <div class="invalid-feedback">Please Enter A Short Description</div>
        </div>

        <div class="mb-2">
        <label for="price" class="form-label">Price</label>
        <input class="form-control"  name="listing[price]" required placeholder="1200">
        <div class="invalid-feedback"> Please Enter Price</div>
        </div>

         <div class="mb-2">
        <label for="image"class="form-label">Upload Image</label>
        <input class="form-control" type="file" name="listing[image]"  required>
        <div class="valid-feedback"> </div>
        </div>

        <div class="row mb-2">
        <div class="mb-2 col-md-4" >
        <label for="location" class="form-label">Location</label>
        <input class="form-control" type="text" name="listing[location]" required placeholder="Pune">
        <div class="invalid-feedback"> Please Enter Location</div>

        </div>
        <div class="mb-2 col-md-6">
        <label for="country" class="form-label">Country</label>
        <input class="form-control" type="text" name="listing[country]" required placeholder="India">
        <div class="invalid-feedback">Please Enter Country</div>
        </div>
        </div>
        <button class="btn add-btn btn-success mb-2">Submit</button>
    </form>
    </div>
    </div>
</body>
