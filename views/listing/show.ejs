<% layout('layout/boiler') %>
<script>
    const mapToken = '<%= process.env.MAP_TOKEN %>';
    const Listing = <%- JSON.stringify(listing)%>;
</script>
    <div class=" row container text-center mt-4">
        <h2 class="mb-4"><b><%= listing.title %></b> </h2>

        <div class="mb-3">
            <img src="<%= listing.image.url %>" class="card-img-top show-img mx-auto d-block" style="max-width: 500px; border-radius: 10px;">
        </div>

        <div class="card-body mx-auto" style="max-width: 500px; text-align: left;">
            <p>
                Owned By: <%= (listing.owner && listing.owner.username) ? listing.owner.username : 'Unknown owner' %> <br>
                <%= listing.description %> <br>
                <%= "â‚¹" + listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
        <% if(currentUser && currentUser._id.equals(listing.owner._id) ){%>
        <div class="d-flex justify-content-center gap-3 mt-3 mb-4">
            <form action="/listings/<%= listing._id %>/edit" method="GET">
                <button class="btn btn-dark">Edit</button>
            </form>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <%}%>

        <% if(currentUser){%>
        <hr>
        <div class="col-6 offset-3 mt-3 mb-3">
        <h3>Leave A Review</h3>

            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                <fieldset class="starability-slot">
                  <legend>Rating:</legend>
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2"name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5"  name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comments" class="form-label"></label>
                    <textarea name="review[comment]" 
                    id="comments" cols="60" rows="5"
                     class="form-control "
                      placeholder="Enter Your Review" required
                    ></textarea>
                    <div class="invalid-feedback">
                    Please Enter Your Review
                </div>
                </div>
                <div >
                    <button class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
            <hr>
        <%}%>

             <% if(listing.reviews.length){%>
            
            <div class="row justify-content-center">
            <p class="text-center"><b>All Reviews</b></p>

                <% for(let review of listing.reviews){ %>
                <div class="card col-md-5 mx-2 mb-3">
                  <div class="card-body text-center">
                    <h5 class="card-title">@<%=review.author.username%></h5>
                    <div class="d-flex justify-content-center">
                        <p class="starability-result" data-rating="<%=review.rating%>"></p>
                    </div>
                    <p class="card-text"><%=review.comment%></p>
                    <% if(currentUser && review.author.equals(currentUser._id)) { %>
                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger mb-3">Delete</button>
                    </form>
                    <% } %>
                  </div>
                </div>
                <% } %>

            </div>
             <%}%>
             
             
</div>



</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 mt-3 mb-5 text-center">
                <h3>Where You'll Be</h3>
                <div  id="map"></div>
        </div>
    </div>
</div>
<script src="/js/map.js"></script>


